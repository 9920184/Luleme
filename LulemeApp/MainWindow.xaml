<Window x:Class="LulemeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="鹿了么" Height="540" Width="890"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="LiquidCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#15FFFFFF" Offset="0"/>
                        <GradientStop Color="#05FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#60FFFFFF" Offset="0"/>
                        <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#10FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="20" CornerRadius="0" ClipToBounds="False" MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Border.Background>
            <SolidColorBrush Color="#0A0B10"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid ClipToBounds="True">
            <Canvas IsHitTestVisible="False">
                <Ellipse Width="500" Height="500" Canvas.Left="-150" Canvas.Top="-150" Opacity="0.3">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#4A00E0" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="100"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="400" Height="400" Canvas.Right="-100" Canvas.Bottom="-100" Opacity="0.2">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#00C6FF" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="120"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Canvas>

            <Grid VerticalAlignment="Top" Margin="0,25,0,0" Panel.ZIndex="100">
                <TextBlock Text="鹿了么" FontSize="36" FontWeight="ExtraBold" Foreground="White" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="5" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Button Command="{Binding ToggleCalendarCommand}" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,0,0,0"
                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#15FFFFFF" CornerRadius="12" Padding="12,6" BorderBrush="#20FFFFFF" BorderThickness="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📅" Margin="0,0,5,0"/>
                                    <TextBlock Text="日历" Foreground="#A0FFFFFF" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,25,0">
                    <Button Command="{Binding ToggleSettingsCommand}" Width="40" Height="40" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="⚙️" FontSize="20" Foreground="#80FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="✕" Click="Exit_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="#60FFFFFF" FontSize="18" Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <Grid Margin="30,80,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource LiquidCard}" Padding="20">
                    <StackPanel>
                        <Grid Width="80" Height="80" Margin="0,0,0,10">
                            <Ellipse Stroke="#007AFF" StrokeThickness="2" Opacity="0.5"/>
                            <Image Source="/Users/touxiang.png" Margin="3" Stretch="UniformToFill">
                                <Image.Clip>
                                    <EllipseGeometry RadiusX="37" RadiusY="37" Center="37,37"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                        <TextBlock Text="{Binding CurrentUser.Name}" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <Border Background="{Binding CurrentUser.GlowColor}" CornerRadius="12" Padding="15,6" Margin="0,10,0,15" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding CurrentUser.Level, StringFormat='Lv.{0}'}" Foreground="White" FontWeight="Bold" FontSize="12" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding CurrentUser.Title}" Foreground="{Binding CurrentUser.TitleColor}" FontWeight="Bold" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <ProgressBar Value="{Binding CurrentUser.Points}" Maximum="10000" Height="4" Background="#20FFFFFF" BorderThickness="0" Foreground="#007AFF"/>
                        <TextBlock Text="{Binding CurrentUser.Points, StringFormat='积分: {0}'}" Foreground="#A0FFFFFF" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,20"/>

                        <TextBlock Text="今日感想" Foreground="#60FFFFFF" FontSize="10" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentInputThought, UpdateSourceTrigger=PropertyChanged}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontSize="12"/>
                        <Button Command="{Binding SaveThoughtCommand}" Content="保存记录" Height="30" Margin="0,10,0,0" Background="#20FFFFFF" Foreground="White" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Button Command="{Binding CheckInCommand}" Width="160" Height="160" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse Width="150" Height="150" Fill="#007AFF" Opacity="0.2">
                                        <Ellipse.Effect>
                                            <BlurEffect Radius="30"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <Ellipse Width="140" Height="140">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                <GradientStop Color="#80FFFFFF" Offset="0"/>
                                                <GradientStop Color="#007AFF" Offset="0.5"/>
                                                <GradientStop Color="#0040DD" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🦌" FontSize="50" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Text="立即打卡" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.95" ScaleY="0.95" CenterX="80" CenterY="80"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Border Background="#15FFFFFF" CornerRadius="20" HorizontalAlignment="Center" Margin="0,30,0,0" Padding="15,8" BorderBrush="#20FFFFFF" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="好友一起🦌" Foreground="White" VerticalAlignment="Center" FontSize="12" FontWeight="Bold" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding IsCoopMode}" VerticalAlignment="Center">
                                <CheckBox.Template>
                                    <ControlTemplate TargetType="CheckBox">
                                        <Grid Width="40" Height="20">
                                            <Border x:Name="Track" CornerRadius="10" Background="#40000000"/>
                                            <Ellipse x:Name="Knob" Width="16" Height="16" Fill="White" HorizontalAlignment="Left" Margin="2,0"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Track" Property="Background" Value="#00C6FF"/>
                                                <Setter TargetName="Knob" Property="HorizontalAlignment" Value="Right"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </CheckBox.Template>
                            </CheckBox>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="#A0FFFFFF" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="12"/>
                </StackPanel>

                <Border Grid.Column="2" Style="{StaticResource LiquidCard}" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="好友列表" Foreground="#80FFFFFF" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ListBox Grid.Row="1" ItemsSource="{Binding Friends}" Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="32" Height="32" CornerRadius="16" BorderBrush="#20FFFFFF" BorderThickness="1" ClipToBounds="True">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding AvatarUrl}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="13"/>
                                            <TextBlock Text="{Binding Title}" Foreground="{Binding TitleColor}" FontSize="10" FontWeight="Bold"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding Level, StringFormat='Lv.{0}'}" Foreground="#60FFFFFF" FontSize="10" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <Grid Background="#80000000" Visibility="{Binding IsCalendarVisible, Converter={StaticResource BoolToVis}}" MouseLeftButtonDown="Calendar_Close" Panel.ZIndex="300">
                <Border Style="{StaticResource LiquidCard}" Width="320" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" Background="#E6101015">
                    <StackPanel>
                        <TextBlock Text="打卡日历" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <Viewbox Height="240">
                            <Calendar x:Name="HistoryCalendar" Background="Transparent" BorderThickness="0" Foreground="White" SelectedDatesChanged="HistoryCalendar_SelectedDatesChanged"/>
                        </Viewbox>
                        <Separator Background="#20FFFFFF" Margin="0,15"/>
                        <TextBlock Text="当日感想：" Foreground="#60FFFFFF" FontSize="10" Margin="0,0,0,5"/>
                        <ScrollViewer Height="60">
                            <TextBlock Text="{Binding SelectedDateThought}" Foreground="#00C6FF" TextWrapping="Wrap" FontSize="12"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Background="#60000000" Visibility="{Binding IsSettingsVisible, Converter={StaticResource BoolToVis}}" MouseLeftButtonDown="Settings_Close" Panel.ZIndex="200">
                <Border Style="{StaticResource LiquidCard}" Width="350" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30" Background="#E6101015">
                    <StackPanel>
                        <TextBlock Text="设置" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="开发者" Foreground="#80FFFFFF" FontSize="13" VerticalAlignment="Center"/>
                            <TextBlock Text="9920184" HorizontalAlignment="Right" Foreground="#007AFF" FontSize="14" FontWeight="Bold" Cursor="Hand">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                                <Setter Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding OpenGithubCommand}"/>
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="软件版本" Foreground="#80FFFFFF" FontSize="13" VerticalAlignment="Center"/>
                            <TextBlock Text="V0.1.0（Beta）" HorizontalAlignment="Right" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="创建日期" Foreground="#80FFFFFF" FontSize="13" VerticalAlignment="Center"/>
                            <TextBlock Text="2026.02.15" HorizontalAlignment="Right" Foreground="#60FFFFFF" FontSize="12" FontFamily="Consolas"/>
                        </Grid>

                        <Separator Background="#20FFFFFF" Margin="0,10,0,25"/>

                        <TextBlock Text="致力于更优雅的鹿关体验" Foreground="#40FFFFFF" FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,30" FontStyle="Italic"/>

                        <Button Content="关闭" Command="{Binding ToggleSettingsCommand}" Height="45" Background="#007AFF" Foreground="White" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="22">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>